#!/bin/sh

# A dwm_bar module to display the current backlight brighness with xbacklight
# Joe Standring <git@joestandring.com>
# GNU GPLv3

# Dependencies: xbacklight
case $BLOCK_BUTTON in
	1) xbacklight 35 ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
	# 2) xbacklight 75 ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
  2) xbacklight $(rofi -dmenu -config ~/.config/rofi/themes/passwd.rasi) ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
	3) xbacklight 70 ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
  4) xbacklight -inc 5 ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
  5) xbacklight -dec 5 ; notify-send -h int:value:$(xbacklight -get) "Light" ;;
  6) nohup $TERMINAL -e nvim "$0" > /dev/null &;;
esac
printf "^c#f8f8ff^"
light=$(xbacklight -get) 
a=$[$light/4]
printf "ÔÅÇ^f2^^s0,8,27,5^^r1,9,%s,3^^f29^%s" "$a" "$light" 
