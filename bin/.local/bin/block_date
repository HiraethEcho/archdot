#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
# case "$1" in
	1) notify-send "This Month" "$(cal | sed "s/\<$(date +'%e'|sed 's/ //g')\>/<b><span color='red'>&<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	4) xbacklight -inc 5 ;;
	5) xbacklight -dec 5 ;;
esac

# date "+%Y %b %d (%a) $icon%I:%M%p"
light=$(xbacklight -get) 
a=$[$light/2]
printf "^c#EBCB8B^ï‚^f2^^r0,8,52,5^^c#000000^^r1,9,50,3^^c#EBCB8B^^r1,9,%s,3^^f54^%s" "$a" "$light" 
